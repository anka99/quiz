html

    head

        title= title

        style

            include style.css

    body

        div

            h1="Hello " + username + "! A bunch of new quizzes for you: "

        form(method='GET' action="history/")

            button(type="submit") History

        form(method='GET' action="changepassword/")

             button(type="submit") Change password




        div

            
            ul
                each  quiz, index in quizzes

                    li

                        form(method='POST', action="/quiz/" + quiz.id)
                            if done[index]
                                button(type="submit" disabled="yes") #{quiz.description}
                            else
                                button(type="submit") #{quiz.description}
                            input(type="hidden" name="quizId" value=quiz.id)
                            input(type="hidden" name="_csrf" value=csrfToken) 

        div

            form(method='POST', action="/logout")
                button(type="submit") Log out 